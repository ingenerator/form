{
  "name": "ingenerator/form",
  "type": "library",
  "description": "Schema-based form rendering / interaction",
  "homepage": "http://github.com/ingenerator/form",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Andrew Coulton",
      "email": "andrew@ingenerator.com",
      "homepage": "http://ingenerator.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "ingenerator/kohana-core": "^4.7",
    "ingenerator/php-utils": "^1.6",
    "ingenerator/kohana-extras": "^2.0"
  },
  "require-dev": {
    "kohana/koharness": "dev-master",
    "phpunit/phpunit": "^9.4",
    "johnkary/phpunit-speedtrap": "^3.2"
  },
  "suggest": {
    "ingenerator/showgroup": "javascript support to show/hide form sections based on values"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://php-packages.ingenerator.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Ingenerator\\Form\\": "src/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "installer-paths": {
      "vendor/{$vendor}/{$name}": [
        "type:kohana-module"
      ]
    }
  }
}
